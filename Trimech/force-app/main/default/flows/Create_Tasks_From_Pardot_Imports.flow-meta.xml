            <stringValue>Encountered error for Create Tasks From Pardot Flow</stringValue>
        </value>
    </constants>
    <decisions>
        <name>Check_if_Contact_is_for_Task_Import</name>
        <label>Check if Contact is for Task Import</label>
        <locationX>710</locationX>
        <locationY>323</locationY>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>Yes</name>
            <conditionLogic>1 OR (2 AND 3)</conditionLogic>
            <conditions>
                <leftValueReference>formulaRecordIsNew</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>formulaRecordIsNew</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Task_Import_Date_Time__c</leftValueReference>
                <operator>IsChanged</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Get_Task_Owner_Id</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
    <decisions>
        <name>Check_if_Task_Owner_Id_Found</name>
        <label>Check if Task Owner Id Found</label>
        <locationX>314</locationX>
        <locationY>539</locationY>
        <defaultConnectorLabel>Do Nothing</defaultConnectorLabel>
        <rules>
            <name>Task_Owner_Id_is_Found</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Get_Task_Owner_Id</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Create_Task_for_Follow_Up</targetReference>
            </connector>
            <label>Task Owner Id is Found</label>
        </rules>
    </decisions>
    <formulas>
        <name>formulaCalculatedActivityDueDate</name>
        <dataType>Date</dataType>
        <expression>IF(ISBLANK({!$Record.Task_Due_Date__c}), TODAY() + 2, {!$Record.Task_Due_Date__c})</expression>
    </formulas>
    <formulas>
        <name>formulaRecordIsNew</name>
        <dataType>Boolean</dataType>
        <expression>ISNEW()</expression>
    </formulas>
    <formulas>
        <name>formulaTaskSubject</name>
        <dataType>String</dataType>
        <expression>IF(ISBLANK({!$Record.Task_Subject__c}), &quot;Follow up call for &quot; + {!$Record.FirstName} + &quot; &quot; + {!$Record.LastName}, {!$Record.Task_Subject__c})</expression>
    </formulas>
    <interviewLabel>Create Tasks From Pardot Imports {!$Flow.CurrentDateTime}</interviewLabel>
