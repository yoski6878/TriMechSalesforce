    <constants>
        <name>consErrorEmailRecipientId</name>
        <dataType>String</dataType>
        <value>
            <stringValue>tina.harpalani@trimech.com</stringValue>
        </value>
    </constants>
    <constants>
        <name>consErrorEmailSubject</name>
        <dataType>String</dataType>
